<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="echoSecuredSoap11Binding" />
            </basicHttpBinding>
            <customBinding>
              <binding name="echoSecuredSoap11Binding1">
                <security defaultAlgorithmSuite="Basic256" authenticationMode="UserNameOverTransport"
                          requireDerivedKeys="true" securityHeaderLayout="Lax" includeTimestamp="true">
                  <localClientSettings detectReplays="false"/>
                  <localServiceSettings detectReplays="false"/>
                </security>
                <textMessageEncoding messageVersion="Soap11"/>
                <httpsTransport/>
              </binding>
                <binding name="echoSecuredSoap12Binding">
                    <textMessageEncoding messageVersion="Soap12" />
                    <httpsTransport />
                </binding>
            </customBinding>
        </bindings>
        <client>
            <endpoint address="http://10.100.5.48:8280/services/echoSecured.echoSecuredHttpSoap11Endpoint"
                binding="basicHttpBinding" bindingConfiguration="echoSecuredSoap11Binding"
                contract="EchoServiceReference.echoSecuredPortType" name="echoSecuredHttpSoap11Endpoint" />
            <endpoint address="https://10.100.5.48:8243/services/echoSecured.echoSecuredHttpsSoap11Endpoint"
                binding="basicHttpBinding" bindingConfiguration="echoSecuredSoap11Binding1"
                contract="EchoServiceReference.echoSecuredPortType" name="echoSecuredHttpsSoap11Endpoint" />
            <endpoint address="https://10.100.5.48:8243/services/echoSecured.echoSecuredHttpsSoap12Endpoint"
                binding="customBinding" bindingConfiguration="echoSecuredSoap12Binding"
                contract="EchoServiceReference.echoSecuredPortType" name="echoSecuredHttpsSoap12Endpoint" />
            <endpoint address="http://10.100.5.48:8280/services/echoSecured.echoSecuredHttpSoap12Endpoint"
                binding="customBinding" bindingConfiguration="echoSecuredSoap12Binding"
                contract="EchoServiceReference.echoSecuredPortType" name="echoSecuredHttpSoap12Endpoint" />
        </client>
    </system.serviceModel>
</configuration>